<Page
    x:Class="Final_Project.Pages.ShopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/BackGrounds/shop_background.jpg"/>
    </Page.Background>

    <Grid>
        <TextBlock Text="SpaceShips" Width="763" Height="134" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="100" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,508,0,0"/>
        <TextBlock Text="Bullets" Width="534" Height="127" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="100" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="127,-26,0,0"/>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="-3,744,1372,0" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image.FocusVisualPrimaryBrush>
                <ImageBrush/>
            </Image.FocusVisualPrimaryBrush>
        </Image>
        <Button x:ConnectionId='2' Canvas.ZIndex="2" Name="Space_Ship1" Height="217" Width="342" HorizontalAlignment="Left" Margin="108,768,0,0" VerticalAlignment="Top"                          >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/spaceship_1.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="662,744,693,0" Stretch="Fill"/>
        <Button x:ConnectionId='3' Canvas.ZIndex="2" Name="Space_Ship2" Height="227" Width="377" HorizontalAlignment="Left" Margin="763,762,0,0" VerticalAlignment="Top">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/spaceship_2.png" Stretch="Fill"/>
            </Button.Background>
        </Button>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="1338,744,1,2" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:ConnectionId='4' Canvas.ZIndex="2" Name="Space_Ship3" Height="245" Width="386" HorizontalAlignment="Left" Margin="1436,758,0,0" VerticalAlignment="Top"                           >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/spaceship_3.png"/>
            </Button.Background>

        </Button>
        <Button x:ConnectionId='5' Canvas.ZIndex="2" Name="Medium_Shell" Margin="150,261,1651,627" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                           >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/Bullets/Medium_Shell.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="0,222,1502,583" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="1010,222,492,583" Stretch="Fill"/>
        <Button x:ConnectionId='6' Canvas.ZIndex="2" Name="Sniper_Bullet" Height="131" Width="211" HorizontalAlignment="Left" Margin="1114,258,0,0" VerticalAlignment="Top"                            >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/Bullets/Sniper_Shell.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="495,222,1007,583" Stretch="Fill"/>
        <Button x:ConnectionId='7' Height="107" Width="138" Name="Heavy_Bullet" Canvas.ZIndex="2" HorizontalAlignment="Left" Margin="638,257,0,0" VerticalAlignment="Top"                           >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/Bullets/Heavy_Shell.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Image Source="ms-appx:///Assets/SpaceShip/space_ships_frame.png" Margin="1502,222,0,583" Stretch="Fill"/>
        <Button x:ConnectionId='8' Height="131" Width="152" Canvas.ZIndex="2" Name="Granade_Bullet" HorizontalAlignment="Left" Margin="1645,261,0,0" VerticalAlignment="Top"                             >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/SpaceShip/Bullets/Granade_Shell.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <TextBlock Text="Ship Level 1" Width="467" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,635,0,0"/>
        <TextBlock Text="Ship Level 2" Width="467" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="705,635,0,0"/>
        <TextBlock Text="Ship Level 3" Width="467" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1379,635,0,0"/>

        <TextBlock Text="Medium Bullet" Width="501" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="40" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,129,0,0"/>
        <TextBlock Text="Heavy Bullet" Width="396" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="40" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="495,129,0,0"/>
        <TextBlock Text="Sniper Bullet" Width="396" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="40" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1005,129,0,0"/>
        <TextBlock Text="Granade Bullet" Width="438" Height="80" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="35" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1531,129,0,0"/>

        <Button x:ConnectionId='9' Name="NextPageButton" Content="Next" FontFamily="Cosmic Alien" FontSize="35" FontWeight="Normal"
                Height="79" Width="316" HorizontalAlignment="Left" Margin="1604,0,0,0" VerticalAlignment="Top" Foreground="White"                                 >
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/Buttons/Button_Template.png"/>
            </Button.Background>
        </Button>

        <Button x:ConnectionId='10' Name="GameReturnPageButton" Content="Return To Game" FontFamily="Cosmic Alien" FontSize="30" FontWeight="Normal"
                Height="79" Width="334" HorizontalAlignment="Left" Margin="1195,-3,0,0" VerticalAlignment="Top" Foreground="White">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/Buttons/Button_Template.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>

