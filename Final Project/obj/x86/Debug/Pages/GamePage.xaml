<Page x:ConnectionId='1'
    x:Class="Final_Project.Pages.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >
    <Page.Background>
        <ImageBrush ImageSource="ms-appx:///Assets/BackGrounds/background_game.jpg"/>
    </Page.Background>

    <Grid>
        <Canvas x:ConnectionId='2' Name="canvas">
            <Image x:ConnectionId='3' Name="shield_1" Height="290" Width="332" Source="ms-appx:///Assets/SpaceShip/Shield.png" Canvas.Left="250" Canvas.Top="638" />
            <Image x:ConnectionId='4' Name="shield_2" Height="290" Width="332" Source="ms-appx:///Assets/SpaceShip/Shield.png" Canvas.Left="842" Canvas.Top="638" />
            <Image x:ConnectionId='5' Name="shield_3" Height="290" Width="332" Source="ms-appx:///Assets/SpaceShip/Shield.png" Canvas.Left="1442" Canvas.Top="638" RenderTransformOrigin="0.1,0.606" />

            <Image x:ConnectionId='6' Name="shield_hp_1" Tag="0" Height="181" Width="208" Source="ms-appx:///Assets/HealthPoints/hp_8_full.png" Canvas.Left="310" Canvas.Top="716"/>
            <Image x:ConnectionId='7' Name="shield_hp_2" Tag="1" Height="181" Width="208" Source="ms-appx:///Assets/HealthPoints/hp_8_full.png" Canvas.Left="902" Canvas.Top="716"/>
            <Image x:ConnectionId='8' Name="shield_hp_3" Tag="2" Height="181" Width="208" Source="ms-appx:///Assets/HealthPoints/hp_8_full.png" Canvas.Left="1502" Canvas.Top="716"/>

            <TextBlock x:ConnectionId='9' Text="Health: 100%"  Name="Health_Text" Width="494" Height="94" Canvas.Left="2" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0"/>

            <Image Height="75" Width="75" Source="ms-appx:///Assets/SpaceShip/coinGif.gif" Canvas.Left="1844" Canvas.Top="1"/>
            <TextBlock x:ConnectionId='10' Text="0"  Name="Coins_Text" Width="96" Height="68" Canvas.Left="1784" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="#FF636363" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="1" Margin="0,0,0,0"/>

            <TextBlock x:ConnectionId='11' Text="Level: 1"  Name="Level_Text" Width="186" Height="74" Canvas.Left="1736" FontFamily="Cosmic Alien" FontSize="50" FontWeight="Normal" FocusVisualSecondaryBrush="#99FFFFFF" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Canvas.Top="74"/>
        </Canvas>
    </Grid>
</Page>

